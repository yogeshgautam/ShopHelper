<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shop Helper"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:width="50dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/toolbar_color"
        android:layout_toRightOf="@+id/imagebutton"
        android:layout_toEndOf="@+id/imagebutton"
        android:gravity="center_vertical" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:onClick="click_Back"
        android:background="@color/toolbar_color"
        android:id="@+id/imagebutton"
        android:src="@drawable/back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@color/background"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="500dp">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:id="@+id/textView_name_vendor"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Address"
                android:layout_marginTop="20dp"

                android:id="@+id/textView_address_vendor"
                android:layout_below="@+id/textView_name_vendor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView_name_vendor"
                android:layout_alignEnd="@+id/textView_name_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phone Number"
                android:layout_marginTop="20dp"

                android:id="@+id/textView_phone_vendor"
                android:layout_below="@+id/textView_address_vendor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView_address_vendor"
                android:layout_alignEnd="@+id/textView_address_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Remarks"
                android:layout_marginTop="20dp"

                android:id="@+id/textView_remarks_vendor"
                android:layout_below="@+id/textView_phone_vendor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView_phone_vendor"
                android:layout_alignEnd="@+id/textView_phone_vendor" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/button"
                android:onClick="click_Save"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_alignTop="@+id/textView_remarks_vendor" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/bottom"
                android:onClick="click_Delete"
                android:text="Delete"

                android:id="@+id/button2"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/textView_remarks_vendor"
                android:layout_toEndOf="@+id/textView_remarks_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Yogesh Gautam"
                android:id="@+id/textView24"
                android:layout_alignTop="@+id/textView_name_vendor"
                android:layout_toRightOf="@+id/textView_name_vendor"
                android:layout_toEndOf="@+id/textView_name_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bhadrapur-7"
                android:id="@+id/textView25"
                android:layout_alignTop="@+id/textView_address_vendor"
                android:layout_toRightOf="@+id/textView_address_vendor"
                android:layout_toEndOf="@+id/textView_address_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0123456789"
                android:id="@+id/textView26"
                android:layout_alignTop="@+id/textView_phone_vendor"
                android:layout_toRightOf="@+id/textView_phone_vendor"
                android:layout_toEndOf="@+id/textView_phone_vendor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="good"
                android:id="@+id/textView27"
                android:layout_alignTop="@+id/textView_remarks_vendor"
                android:layout_toRightOf="@+id/textView_remarks_vendor"
                android:layout_toEndOf="@+id/textView_remarks_vendor" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>